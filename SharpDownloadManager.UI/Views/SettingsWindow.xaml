<Window x:Class="SharpDownloadManager.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="360"
        Height="200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Spacing="8">
            <CheckBox Content="Show notification when a download completes"
                      IsChecked="{Binding AreCompletionNotificationsEnabled, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Width="80" Height="26" Content="Close" IsDefault="True" Click="OnCloseClick" />
        </StackPanel>
    </Grid>
</Window>
