<Window x:Class="SharpDownloadManager.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:SharpDownloadManager.UI.Converters"
        mc:Ignorable="d"
        Title="Sharp Download Manager"
        Height="600"
        Width="1000">
    <Window.Resources>
        <converters:NullablePercentageConverter x:Key="NullablePercentageConverter" />
        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Completed">
                    <Setter Property="Background" Value="#E8F8E8" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Error">
                    <Setter Property="Background" Value="#FCE8E6" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Paused">
                    <Setter Property="Background" Value="#FFF9E6" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <TextBlock Text="URL:" VerticalAlignment="Center" Margin="2" />
            <TextBox Width="320"
                     Margin="2"
                     Text="{Binding NewDownloadUrl, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Add Download"
                    Margin="2"
                    Command="{Binding AddDownloadCommand}" />
            <Separator />
            <TextBlock Text="Save To:" VerticalAlignment="Center" Margin="2" />
            <TextBox Width="260"
                     Margin="2"
                     IsReadOnly="True"
                     Text="{Binding SaveFolderPath}" />
            <Separator />
            <Button Content="Pause"
                    Margin="2"
                    Command="{Binding PauseDownloadCommand}"
                    CommandParameter="{Binding SelectedDownload}" />
            <Button Content="Resume"
                    Margin="2"
                    Command="{Binding ResumeDownloadCommand}"
                    CommandParameter="{Binding SelectedDownload}" />
            <Button Content="Delete"
                    Margin="2"
                    Command="{Binding DeleteDownloadCommand}"
                    CommandParameter="{Binding SelectedDownload}" />
            <Button Content="Open File"
                    Margin="2"
                    Command="{Binding OpenFileCommand}"
                    CommandParameter="{Binding SelectedDownload}" />
            <Button Content="Open Folder"
                    Margin="2"
                    Command="{Binding OpenFolderCommand}"
                    CommandParameter="{Binding SelectedDownload}" />
            <Separator />
            <Button Content="Settings"
                    Margin="2"
                    Command="{Binding OpenSettingsCommand}" />
        </ToolBar>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0"
                      AutoGenerateColumns="False"
                      ItemsSource="{Binding Downloads}"
                      Margin="8"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectedItem="{Binding SelectedDownload, Mode=TwoWay}"
                      MouseDoubleClick="OnDownloadsDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                          Binding="{Binding Name}"
                                          Width="2*"
                                          MinWidth="160" />
                    <DataGridTextColumn Header="Status"
                                          Binding="{Binding StatusText}"
                                          Width="*"
                                          MinWidth="100" />
                    <DataGridTemplateColumn Header="Progress"
                                            Width="*"
                                            MinWidth="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Minimum="0"
                                             Maximum="100"
                                             Height="18"
                                             Value="{Binding Progress}"
                                             IsIndeterminate="{Binding IsProgressIndeterminate}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Progress (%)"
                                          Binding="{Binding ProgressPercent, Converter={StaticResource NullablePercentageConverter}}"
                                          Width="*"
                                          MinWidth="90" />
                    <DataGridTextColumn Header="Size (Downloaded / Total)"
                                          Binding="{Binding SizeText}"
                                          Width="*"
                                          MinWidth="140" />
                    <DataGridTextColumn Header="Speed"
                                          Binding="{Binding SpeedText}"
                                          Width="*"
                                          MinWidth="110" />
                    <DataGridTextColumn Header="ETA"
                                          Binding="{Binding EtaText}"
                                          Width="*"
                                          MinWidth="90" />
                    <DataGridTextColumn Header="Mode"
                                          Binding="{Binding ModeText}"
                                          Width="*"
                                          MinWidth="80" />
                    <DataGridTextColumn Header="Error"
                                          Binding="{Binding ErrorText}"
                                          Width="2*"
                                          MinWidth="160" />
                    <DataGridTemplateColumn Header="Actions" Width="2*" MinWidth="220">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Open"
                                            Margin="2"
                                            Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="Folder"
                                            Margin="2"
                                            Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="Pause"
                                            Margin="2"
                                            Command="{Binding DataContext.PauseDownloadCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="Resume"
                                            Margin="2"
                                            Command="{Binding DataContext.ResumeDownloadCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="Delete"
                                            Margin="2"
                                            Command="{Binding DataContext.DeleteDownloadCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <TabControl Grid.Row="1" Margin="8">
                <TabItem Header="Overview">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,8">
                            <TextBlock Text="Selected download" FontWeight="Bold" Margin="0,0,0,4" />

                            <TextBlock Text="{Binding SelectedDownload.Name}" />
                            <TextBlock Text="{Binding SelectedDownload.StatusText}" />
                            <TextBlock Text="{Binding SelectedDownload.SizeText}" />
                            <TextBlock Text="{Binding SelectedDownload.SpeedText}" />
                            <TextBlock Text="{Binding SelectedDownload.EtaText}" />
                            <TextBlock Text="{Binding SelectedDownload.ModeText}" />
                        </StackPanel>

                        <GroupBox Grid.Row="1" Header="Last error" Margin="0">
                            <TextBox Text="{Binding SelectedDownload.ErrorText}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     IsReadOnly="True"
                                     VerticalScrollBarVisibility="Auto" />
                        </GroupBox>
                    </Grid>
                </TabItem>
                <TabItem Header="Connections">
                    <TextBlock Text="Per-connection details will appear here." Margin="8" />
                </TabItem>
                <TabItem Header="Logs">
                    <TextBlock Text="Log output will appear here." Margin="8" />
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
