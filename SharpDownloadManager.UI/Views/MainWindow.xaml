<Window x:Class="SharpDownloadManager.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sharp Download Manager"
        Height="600"
        Width="1000">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <TextBlock Text="URL:" VerticalAlignment="Center" Margin="2" />
            <TextBox Width="320"
                     Margin="2"
                     Text="{Binding NewDownloadUrl, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Add Download"
                    Margin="2"
                    Command="{Binding AddDownloadCommand}" />
            <Separator />
            <TextBlock Text="Save To:" VerticalAlignment="Center" Margin="2" />
            <TextBox Width="260"
                     Margin="2"
                     IsReadOnly="True"
                     Text="{Binding SaveFolderPath}" />
            <Separator />
            <Button Content="Pause"
                    Margin="2"
                    Command="{Binding PauseDownloadCommand}"
                    CommandParameter="{Binding SelectedDownload}" />
            <Button Content="Resume"
                    Margin="2"
                    Command="{Binding ResumeDownloadCommand}"
                    CommandParameter="{Binding SelectedDownload}" />
            <Button Content="Delete"
                    Margin="2"
                    Command="{Binding DeleteDownloadCommand}"
                    CommandParameter="{Binding SelectedDownload}" />
            <Button Content="Open File" Margin="2" IsEnabled="False" Command="{x:Null}" />
            <Button Content="Open Folder" Margin="2" IsEnabled="False" Command="{x:Null}" />
            <Button Content="Settings" Margin="2" IsEnabled="False" Command="{x:Null}" />
        </ToolBar>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0"
                      AutoGenerateColumns="False"
                      ItemsSource="{Binding Downloads}"
                      Margin="8"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectedItem="{Binding SelectedDownload, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                    <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="*" />
                    <DataGridTextColumn Header="Progress (%)" Binding="{Binding Progress}" Width="*" />
                    <DataGridTextColumn Header="Size (Total / Downloaded)" Binding="{Binding SizeText}" Width="*" />
                    <DataGridTextColumn Header="Speed" Binding="{Binding SpeedText}" Width="*" />
                    <DataGridTextColumn Header="ETA" Binding="{Binding EtaText}" Width="*" />
                    <DataGridTextColumn Header="Mode" Binding="{Binding ModeText}" Width="*" />
                    <DataGridTemplateColumn Header="Actions" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Pause"
                                            Margin="2"
                                            Command="{Binding DataContext.PauseDownloadCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="Resume"
                                            Margin="2"
                                            Command="{Binding DataContext.ResumeDownloadCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="Delete"
                                            Margin="2"
                                            Command="{Binding DataContext.DeleteDownloadCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <TabControl Grid.Row="1" Margin="8">
                <TabItem Header="Overview">
                    <TextBlock Text="Overview details will appear here." Margin="8" />
                </TabItem>
                <TabItem Header="Connections">
                    <TextBlock Text="Connection information will appear here." Margin="8" />
                </TabItem>
                <TabItem Header="Log">
                    <TextBlock Text="Log output will appear here." Margin="8" />
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
