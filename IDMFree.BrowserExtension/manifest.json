{
  "manifest_version": 3,
  "name": "IDMFree Bridge",
  "description": "Bridge between the browser and IDMFree download manager.",
  "version": "0.1.0",
  "permissions": [
    "downloads",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:5454/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "IDMFree Bridge"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}
